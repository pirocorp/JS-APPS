{{> header}}
<main>
    <div class="alert alert-success" role="alert" id="infoBox" style="display: none;">
        This is a success alert—check it out!
    </div>
    <div class="alert alert-danger" role="alert" id="errorBox" style="display: none;">
        This is a danger alert—check it out!
    </div>
    <div class="container">
        <div class="row space-top">
            <div class="col-md-12">
                <h1>Furniture Details</h1>
            </div>
        </div>
        {{#if loggedIn}}
        <div class="row space-top">
            <div class="col-md-8">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <blockquote class="card-blockquote">
                            <img src="{{furniture.image}}" />
                        </blockquote>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <p>Make: {{furniture.make}}</p>
                <p>Model: {{furniture.model}}</p>
                <p>Year: {{furniture.year}}</p>
                <p>Description: {{furniture.description}}</p>
                <p>Price: {{furniture.price}}</p>
                <p>Material: {{furniture.material}}</p>
            </div>
        </div>
        {{else}}
        <h2>You must be logged in to see our furniture list.</h2>
        {{/if}}
    </div>
</main>
{{> footer}}